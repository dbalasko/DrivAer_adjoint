FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      optimisationDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

optimisationManager steadyOptimisation;

primalSolvers
{
    op1
    {
        active                 true;
        type                   incompressible;
        solver                 simple;

        solutionControls
        {
            consistent yes;
            nIters 1000;
            residualControl
            {
                "p.*"       1.e-7;
                "U.*"       1.e-7;
            }
            averaging
            {
                average     true;
                startIter   500;
            }
        }
    }
}

adjointManagers
{
    adjManager1
    {
        primalSolver             op1;
        adjointSolvers
        {
            adjS1
            {
                // choose adjoint solver
                //----------------------
                active                 true;
                type                   incompressible;
                solver                 adjointSimple;
                computeSensitivities true ;

                // manage objectives
                //------------------
                objectives
                {
                    type incompressible;
                    objectiveNames
                    {
                        drag
                        {
                            weight     1.;
                            type       force;
                            patches    ("body" "optSurface");
                            direction  (1 0 0);
                            Aref       1.016;
                            rhoInf     1.225;
                            UInf       20;
                        }
                    }
                }
                // ATC treatment
                //--------------
                ATCModel
                {
                    ATCModel          standard;
                    extraConvection   0;
                    nSmooth           1;
                    zeroATCPatchTypes (wall patch);
                    maskType          pointCells;
                }
                // solution control
                //------------------
                solutionControls
                {
                    consistent yes;
                    nIters 1000;
                    residualControl
                    {
                        "pa.*"       1.e-7;
                        "Ua.*"       1.e-7;
                    }
                }
            }
        }
    }
}


optimisation
{
    designVariables
    {
        type            shape;
        shapeType       volumetricBSplines;
        sensitivityType shapeFI;
        patches         (optSurface);
        maxInitChange   2.e-3;
        
        sensitivityType multiple;
        sensitivityTypes 
        (
            pointBased 
            faceBased-unsmoothed
            faceBased-RMult_2
            faceBased-RMult_5
            faceBased-RMult_10
        );
        patches          ("optSurface" "body");
        pointBased
        {
            sensitivityType    surfacePoints;
            patches            ("optSurface" "body");
            adjointEikonalSolver
            {
                tolerance 1.e-5;
                iters     1000;
                epsilon   0.1;
            }
        }
        faceBased-unsmoothed
        {
            sensitivityType      surface;
            patches              ("optSurface" "body");
            includeSurfaceArea   true;
        }
        faceBased-RMult_2
        {
            sensitivityType      surface;
            patches              ("optSurface" "body");
            includeSurfaceArea   true;
            smoothSensitivities  true;
            meanRadiusMultiplier 2;
            suffix               Rmult2; // suffix of the sensitivity map output files
            iters                1000;
        }
        faceBased-RMult_5
        {
            sensitivityType      surface;
            patches              ("optSurface" "body");
            includeSurfaceArea   true;
            smoothSensitivities  true;
            meanRadiusMultiplier 5;
            suffix               Rmult5; // suffix of the sensitivity map output files
            iters                1000;
        }
        faceBased-RMult_10
        {
            sensitivityType      surface;
            patches              ("optSurface" "body");
            includeSurfaceArea   true;
            smoothSensitivities  true;
            meanRadiusMultiplier 10;
            suffix               Rmult10; // suffix of the sensitivity map output files
            iters                1000;
        }
    }

    convergence
    {
    	designVariables 	1.e-4;
	objective 		1.e-4;
	feasibilityThreshold 	1.e-6;
    
    
    }
    updateMethod
    {
        method conjugateGradient;
        lineSearch
        {
            type    ArmijoConditions;
        }
        //eta 1; //optional
    }
}


